@model ManageYourBudget.Dtos.Expenditure.ExpenditureDto

<tr title="Click to see details!" onclick="location.href = '@Url.Action("Details","Expenditure", new { id = Model.Id})'">
    <td>@Model.Title</td>
    <td>@Model.Amount $</td>
    <td>@Model.Date.ToShortDateString()</td>
    <td>@Model.Category.Name</td>
    <td>
        <a title="Click to edit!" href="@Url.Action("Edit", "Expenditure", new { id = Model.Id} )">
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
        </a>
    </td>
    <td>
        <a>
            @{
                var deleteLink = Url.Action("Delete", "Expenditure");
                <span class="glyphicon glyphicon-remove" aria-hidden="true" onclick="event.stopPropagation();deleteRow(@Model.Id, this, '@deleteLink');"></span>
            }
        </a>
    </td>
</tr>
<script>
    var deleteRow = function (id, row, action) {
        $("#dialog-confirm").show()
            .data("data", { row: row, action: action, id: id })
            .dialog("open");
    }
</script>