@model ManageYourBudget.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {

            @Html.AntiForgeryToken()
            <h2 class="text-center">@ViewBag.Title</h2>
            <hr />
            <div class="panel panel-default">
                <div class="panel-heading text-center">@Html.LabelFor(m => m.FirstName, new { @class = "control-label" })</div>
                <div class="panel-body">
                    <div>
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control full-width" })
                        <div class="text-danger">
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading text-center">@Html.LabelFor(m => m.LastName, new { @class = "control-label" })</div>
                <div class="panel-body">
                    <div>
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control full-width" })
                        <div class="text-danger">
                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading text-center">@Html.LabelFor(m => m.Email, new { @class = "control-label" })</div>
                <div class="panel-body">
                    <div>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control full-width" })
                        <div class="text-danger">
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading text-center">@Html.LabelFor(m => m.Password, new { @class = "control-label" })</div>
                <div class="panel-body">
                    <div>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control full-width" })
                        <div class="text-danger">
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading text-center">@Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })</div>
                <div class="panel-body">
                    <div>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control full-width" })
                        <div class="text-danger">
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <input type="submit" class="btn btn-default button-full" value="Register" />
            @Html.ValidationSummary();
        }
    </div>
</div>



